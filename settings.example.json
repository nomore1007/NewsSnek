{
  "ollama": {
    "host": "localhost",
    "model": "smollm2:135m",
    "overview_model": "llama2",
    "timeout": 120
  },
  "processing": {
    "max_overview_summaries": 50,
    "scrape_timeout": 30,
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
